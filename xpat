public boolean waitAndClick(WebElement we) throws InterruptedException {
	    boolean result = false;
	    int attempts = 0;
	    while(attempts < 4) {
	        try {
	        	we.click();
	            result = true;
	            break;
	        } catch(StaleElementReferenceException e) {
	        	Thread.sleep(500);
	        }
	        attempts++;
	    }
	    return result;
	}
